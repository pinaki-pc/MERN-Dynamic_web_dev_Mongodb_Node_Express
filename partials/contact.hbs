<div class=" container-fluid mt-5 contact-style " id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us </h1>
            <p class="text-center sub-heading">We will be happy to help you</p>

            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label for="idname">Name</label>
                            <input type="text" name="name" id="idname" class="form-control" placeholder="Enter Full Name">
                        </div>
                        <div class="form-group">
                            <label for="idemail">Email Address</label>
                            <input type="email" name="email" id="idemail" class="form-control" placeholder="Enter Your Email Address">
                        </div>
                        <div class="form-group">
                            <label for="idphone">Phone</label>
                            <input type="number" name="phone" id="idphone" class="form-control" placeholder="Enter Phone Number">
                        </div>
                        <div class="form-group">
                            <label for="idmessage">Message</label>
                            <textarea name="message" id="idmessage" class="form-control"  cols="30" rows="4" placeholder="Enter Your Message"></textarea>
                        </div>

                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>